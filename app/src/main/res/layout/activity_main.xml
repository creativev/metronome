<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBeats1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />


        <ImageButton
            android:id="@+id/btnBeats4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNumBeatsDown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strDown" />

        <TextView
            android:id="@+id/txtNumBeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strBPM"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnNumBeatsUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strUp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBPMDown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strDown" />

        <TextView
            android:id="@+id/txtBPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strBPM"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnBPMUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strUp" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Play"
        android:textOn="Stop" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id" />
</LinearLayout>
