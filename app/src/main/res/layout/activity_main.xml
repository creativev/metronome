<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/beatsVizContainer1"
            style="@style/style_beats_container">

            <ImageButton
                android:id="@+id/btnBeats1"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats2"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats3"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats4"
                style="@style/style_beats" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/beatsVizContainer2"
            style="@style/style_beats_container">

            <ImageButton
                android:id="@+id/btnBeats5"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats6"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats7"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats8"
                style="@style/style_beats" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/beatsVizContainer3"
            style="@style/style_beats_container">

            <ImageButton
                android:id="@+id/btnBeats9"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats10"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats11"
                style="@style/style_beats" />

            <ImageButton
                android:id="@+id/btnBeats12"
                style="@style/style_beats" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numBeatsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNumBeatsDown"
            style="@style/style_btn_face"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_btn_face"
            android:gravity="center"
            android:text="@string/strDown" />

        <TextView
            android:id="@+id/txtNumBeats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/strNumBeats"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnNumBeatsUp"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/strUp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bpmContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBPMDown"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/strDown" />

            <TextView
                android:id="@+id/txtBPM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/strBPM"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btnBPMUp"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/strUp" />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/btnStart"
            style="@style/toggleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_toggle_bg" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id" />
</LinearLayout>
