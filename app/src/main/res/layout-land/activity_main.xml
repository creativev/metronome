<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBeats1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tick" />

        <ImageButton
            android:id="@+id/btnBeats2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />

        <ImageButton
            android:id="@+id/btnBeats8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="0"
            android:contentDescription="@string/msg_accs_beats_button"
            android:src="@drawable/ic_beat_tock" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/ad_unit_id" />
</LinearLayout>
